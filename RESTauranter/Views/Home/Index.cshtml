@{
    ViewData["Title"] = "Write a Review";
}

@model RESTauranter.Models.Review

 <div class="col-md-6">
        <h2>Review a Restaurant</h2>
        
        <form asp-controller="Home" asp-action="AddReview" method="post">
            <div class="form-group"> 
                <label>Reviewer Name</label>
                <input asp-for="UserName" class="form-control">
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">   
                <label>Restaurant Name</label>
                <input asp-for="PlaceName" class="form-control">
                <span asp-validation-for="PlaceName"></span>                
            </div>
            <div class="form-group">
                <label>Review </label>
                <input asp-for="ReviewInfo" class="form-control">
                <span asp-validation-for="ReviewInfo"></span>                                
            </div>
            <div class="form-group">
                <label>Date of Visit</label>
                <input asp-for="VisitDate" class="form-control">
                <span asp-validation-for="VisitDate"></span>                                
            </div>
            <div class="form-group">
                <label>Stars</label>
                <select asp-for="Stars" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
                <span asp-validation-for="Stars"></span>                                    
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form> 
    </div>       
